{
  "name": "activity-log-node-service",
  "version": "1.0.0",
  "description": "Activity & Audit Log Service - Node.js Implementation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:load": "autocannon -c 1000 -d 30 -p 10 http://localhost:3000/api/v1/health",
    "test:load:ingest": "node scripts/load-test-ingest.js",
    "benchmark": "node scripts/benchmark.js",
    "consumer:start": "tsx src/consumer/index.ts"
  },
  "keywords": [
    "activity-log",
    "audit",
    "kafka",
    "microservice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.3.0",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "uuid": "^9.0.1",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "autocannon": "^7.14.0",
    "clinic": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}